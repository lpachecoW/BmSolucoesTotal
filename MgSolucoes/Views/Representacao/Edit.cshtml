@model MgSolucoes.Models.Representacao
@{
    ViewBag.Title = "Editar representante";
}

<h2>Editar Representante</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.HiddenFor(m => m.Representacao_id)

        <div class="form-group">
            <p class="control-label col-md-2">Representante</p>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">CPF</p>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Cpf, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Cpf, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Funcao</p>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Funcao, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Funcao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Data de Nascimento</p>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Dt_nascimento, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Dt_nascimento, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar alterações" class="btn btn-success" />
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}

