@model IEnumerable<MgSolucoes.Models.Atendimento>
@{
    ViewBag.Title = "AtendimentosRealizados";
}
<style>
    /* Rules for sizing the icon. */
    .material-icons.md-18 {
        font-size: 18px;
    }

    .material-icons.md-24 {
        font-size: 24px;
    }

    .material-icons.md-36 {
        font-size: 36px;
    }

    .material-icons.md-48 {
        font-size: 48px;
    }

    .tooltip {
        position: relative;
        display: inline-block;
        border-bottom: 1px dotted black;
    }

        .tooltip .tooltiptext {
            visibility: hidden;
            width: 120px;
            background-color: #555;
            color: #fff;
            text-align: center;
            border-radius: 6px;
            padding: 5px 0;
            position: absolute;
            z-index: 1;
            bottom: 125%;
            left: 50%;
            margin-left: -60px;
            opacity: 0;
            transition: opacity 0.3s;
        }

            .tooltip .tooltiptext::after {
                content: "";
                position: absolute;
                top: 100%;
                left: 50%;
                margin-left: -5px;
                border-width: 5px;
                border-style: solid;
                border-color: #555 transparent transparent transparent;
            }

        .tooltip:hover .tooltiptext {
            visibility: visible;
            opacity: 1;
        }

    
</style>
<br />

<table class="table">
    <tr>
        <th>Cliente</th>
        <th>Data do relato</th>
        <th>Grupo</th>
        <th>Cota</th>
        <th>Status do atendimento</th>
        <th>Status do boleto</th>
    </tr>

    @foreach (var atendimento in Model)
    {
    <tr>
        <td>@Html.ActionLink(atendimento.Clientes.Nome, "DetailsByIdDetail", new { id = atendimento.Atendimento_id })</td>
        <td>@Html.DisplayFor(modelItem => atendimento.Dt_Atendimento)</td>
        <td>@Html.DisplayFor(modelItem => atendimento.Clientes.Grupos.Nome)</td>
        <td>@Html.DisplayFor(modelItem => atendimento.Clientes.Cota_id)</td>
        <td>@Html.DisplayFor(modelItem => atendimento.Atendimentos.Nome)</td>
        <td>@Html.DisplayFor(modelItem => atendimento.Pagamentos.Nome)</td>

        <td>

        <td><i class="material-icons md-36">@Html.ActionLink("delete", "Delete", new { id = atendimento.Atendimento_id })</i></td>

    </tr>

    }
</table>
