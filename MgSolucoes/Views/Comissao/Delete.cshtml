@model MgSolucoes.Models.Comissao
@{
    ViewBag.Title = "Deletar";
}
<h2>Deletar Comissao</h2>
<h3 class="text-danger">Deseja deletar esta comissão?</h3>
<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(m => m.Grupos.Nome, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Grupos.Nome,
                                      new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Representacoes.Nome, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Representacoes.Nome,
                                      new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>
   

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Deletar Comissao" class="btn btn-danger" />
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-warning" })
            </div>
        </div>
    }
</div>


