@model MgSolucoes.Models.Grupos
@{
    ViewBag.Title = "Deletar Grupo";
}

    <h2>Delete</h2>

    <h3 class="text-danger">Deseja deletar este grupo ?</h3>
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.Nome, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Nome,
                                          new { @class = "form-control", @disabled = "disabled" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Dt_Vencimento, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Dt_Vencimento,
                                          new { @class = "form-control", @disabled = "disabled" })
            </div>
        </div>
      

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Deletar Cliente" class="btn btn-danger" />
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-warning" })
                </div>
            </div>
        }
    </div>




